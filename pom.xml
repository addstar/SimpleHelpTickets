<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>me.odium</groupId>
  <artifactId>simplehelptickets</artifactId>
  <version>1.4.0-SNAPSHOT</version>
    <name>SimpleHelpTickets</name>
    <description>'Simple Ticket Handling plugin integrates optionally with SimpleMail ${simplemail.version}.
        Built against Spigot ${spigot.version}.'
    </description>
  <properties>
    <build.number />
    <plugin.version>${project.version}-${build.number}</plugin.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <spigot.api.version>1.14</spigot.api.version>
    <spigot.version>1.14.2-R0.1-SNAPSHOT</spigot.version>
      <bungeechat-bukkit.version>1.3.0-SNAPSHOT</bungeechat-bukkit.version>
    <simplemail.version>1.3.9-SNAPSHOT</simplemail.version>
  </properties>
  <scm>
  <connection>scm:git:git@github.com:AddstarMC/SimpleHelpTickets.git</connection>
  <developerConnection>scm:git:git@github.com:AddstarMC/SimpleHelpTickets.git</developerConnection>
  <url>https://github.com/AddstarMC/SimpleHelpTickets</url>
  <tag>HEAD</tag>
</scm>
  <developers>
    <developer>
      <id>AddstarMC</id>
      <name>AddstarMC</name>
      <url>http://github.com/AddstarMC</url>
      <roles>
        <role>developer</role>
        <role>maintainer</role>
      </roles>
      <timezone>10</timezone>
    </developer>
  </developers>
  <distributionManagement>
    <repository>
      <id>addstar-repo</id>
      <name>maven.addstar.com.au-releases</name>
      <url>http://maven.addstar.com.au/artifactory/ext-release-local</url>
    </repository>
    <snapshotRepository>
      <id>addstar-snapshot-repo</id>
      <name>maven.addstar.com.au-snapshots</name>
      <url>http://maven.addstar.com.au/artifactory/ext-snapshot-local</url>
    </snapshotRepository>
  </distributionManagement>
  <repositories>
        <!-- Addstar repos -->
    <repository>
      <id>addstar-repo</id>
        <url>http://maven.addstar.com.au/artifactory/all-release</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>addstar-snapshot-repo</id>
        <url>http://maven.addstar.com.au/artifactory/all-snapshot</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <releases>
        <enabled>false</enabled>
      </releases>
    </repository>
    <!-- Other repositories -->
    <repository>
      <id>maven-central</id>
      <url>http://repo1.maven.org/maven2/</url>
    </repository>
  </repositories>

  <dependencies>
    <dependency>
      <groupId>org.spigotmc</groupId>
      <artifactId>spigot-api</artifactId>
      <version>${spigot.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>au.com.addstar</groupId>
      <artifactId>Pandora</artifactId>
      <version>1.16.5-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>me.odium.test</groupId>
      <artifactId>simplemail</artifactId>
      <version>${simplemail.version}</version>
      <scope>provided</scope>
      <optional>true</optional>
      <exclusions>
        <exclusion>
          <groupId>org.spigotmc</groupId>
          <artifactId>spigot-api</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
      <dependency>
        <groupId>org.xerial</groupId>
        <artifactId>sqlite-jdbc</artifactId>
        <version>3.14.2.1</version>
          <type>jar</type>
          <scope>test</scope>
      </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
    </dependency>
  </dependencies>
  <build>
    <resources>
      <resource>
        <targetPath>.</targetPath>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <includes>
          <include>config.yml</include>
          <include>plugin.yml</include>
          <include>output.yml</include>
        </includes>
      </resource>
    </resources>
    <sourceDirectory>src/main/java</sourceDirectory>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.5.3</version>
      </plugin>
    </plugins>
  </build>
</project>
